
@{
    ViewBag.Title = "sua";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<script>
    function UpdateDL() {


        var fileInput = document.getElementById('txtAnh');
        var mahq = document.getElementById('txtma').value;
        var ten = document.getElementById('txtten').value;
        var ml = document.getElementById('txtmaloai').value;
        var dgb = document.getElementById('txtdongiaban').value;
        var dgn = document.getElementById('txtdongianhap').value;
        var mota = document.getElementById('txtmota').value;
        var tl = document.getElementById('txttrongluong').value;

        var fileName = fileInput.files[0].name;
        if (mahq && ten && ml && dgb && dgn && mota && mota && tl && fileInput) {
            var url = 'https://localhost:44358/api/Hoaqua?id=' + mahq + '&name=' + ten + '&loaihq=' + ml + '&dongiaban=' + dgb + '&dongianhap='
                + dgn + '&anh=' + fileName + '&mota=' + mota + '&trongluong=' + tl;
            $.ajax({
                url: url,
                method: 'PUT',
                contentType: 'json',
                dataType: 'json',
                error: function (response) {
                    alert("Sửa không thành công");
                },
                success: function (reponse) {
                    alert("Sửa thành công");
                    GetAllCustomers();//Gọi đến hàm lấy dữ liệu lên bảng
                }
            });
        } else {
            alert("Vui lòng nhập đầy đủ thông tin ");
        }
    }




</script>

<div class="container">
    <table style="border:none">
        <tbody>
            <tr>
                <td style="width:150px">Mã hoa quả : </td>
                <td>
                    <input id="txtma" type="text" name="MaKhach"
                           placeholder="Mã Hoa Quả" />
                </td>
            </tr>
            <tr>
                <td style="width:30px">Tên Hoa quả : </td>
                <td>
                    <input id="txtten" type="text" name="TenKhach" placeholder="Tên Hoa Quả" />
                </td>
            </tr>
            <tr>
                <td>Mã loại : </td>
                <td>
                    <input id="txtmaloai" type="text" name="DiaChi"
                           placeholder="Mã loại hoa quả" />
                </td>
            </tr>
            <tr>
                <td>:Đơn giá bán </td>
                <td>
                    <input id="txtdongiaban" type="text" name="DienThoai"
                           placeholder="Đơn giá bán" />
                </td>
            </tr>
            <tr>
                <td>Đơn giá nhập: </td>
                <td>
                    <input id="txtdongianhap" type="text" name="DienThoai"
                           placeholder="Đơn giá nhập" />
                </td>
            </tr>
            <tr>
                <td>Ảnh: </td>
                <td>
                    <input id="txtAnh" type="file" name="DienThoai"
                           placeholder="" />
                </td>
            </tr>
            <tr>

                <td>Mô tả </td>
                <td>
                    <input id="txtmota" type="text" name="DienThoai"
                           placeholder="Mô tả" />
                </td>
            </tr>
            <tr>
                <td>trọng lượng </td>
                <td>
                    <input id="txttrongluong" type="text" name="DienThoai"
                           placeholder="Trọng lượng" />
                </td>
            </tr>

            <tr>

                <td>
                    <button class="btn-primary update-button"
                            onclick="UpdateDL();">
                        Sửa
                    </button>
                </td>
                <td>
                    <a class=" btn btn-danger rounded" href="@Url.Action("Index", "Hoaqua")">Trang Chủ</a>
                </td>
                

            </tr>
        </tbody>
    </table>
</div>